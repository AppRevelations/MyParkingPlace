        android:background="@drawable/circle_button" />

    <Button
        android:id="@+id/bgotolocation"
        android:layout_width="100dp"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp"
		android:background="@drawable/circle_button" 
        android:text="Go to parked Location" />

</LinearLayout>
